<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.Payment2">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back_payment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Regresar"
            app:icon="@android:drawable/ic_media_rew" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/next_payment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:text="Siguinete"
            app:icon="@android:drawable/ic_media_ff" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_payment2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:theme="@style/Theme.VictoryPay.datePicker"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seccion_payment2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/paymentType_payment2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/check_payment2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Depósito"
                    android:theme="@style/Theme.VictoryPay.datePicker"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="88dp"
                    tools:layout_editor_absoluteX="232dp"
                    tools:layout_editor_absoluteY="87dp" />

                <RadioButton
                    android:id="@+id/cash_payment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Efectivo"
                    android:theme="@style/Theme.VictoryPay.datePicker"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="88dp"
                    tools:layout_editor_absoluteX="232dp"
                    tools:layout_editor_absoluteY="135dp" />
            </RadioGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:layout_editor_absoluteY="141dp">

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:minWidth="50dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_min="50dp">

                    <EditText
                        android:id="@+id/mount_payment2"
                        android:layout_width="131dp"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="9"
                        android:textSize="20sp"
                        android:theme="@style/Theme.VictoryPay.datePicker" />

                    <TextView
                        android:id="@+id/textView51"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="USD"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monto"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout6" />

                <TextView
                    android:id="@+id/montPrice_payment2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:gravity="start|center_vertical"
                    android:text="6000 USD"
                    android:textColor="@color/purple_200"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout6"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout6"
                    app:layout_constraintVertical_bias="0.53" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:textColor="@color/purple_200"
                    app:layout_constraintBottom_toTopOf="@+id/montPrice_payment2"
                    app:layout_constraintStart_toStartOf="@+id/montPrice_payment2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/messagePayment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/purple_200"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/messagePayment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Enero - Marzo"
                    android:textColor="@color/purple_200"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dateTitle_payment2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Fecha del deposito" />

                    <TextView
                        android:id="@+id/date_payment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccione una fecha"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/operationTitle_payment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Numero de la Operación" />

                    <EditText
                        android:id="@+id/operarion_payment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Numero de la operación"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:theme="@style/Theme.VictoryPay.datePicker" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/name_payument2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daniela Angelica Arevalo Betancourt"
        android:textColor="@color/purple_200"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/progress_payment2"
        app:layout_constraintStart_toStartOf="@+id/progress_payment2"
        app:layout_constraintTop_toBottomOf="@+id/ci_payment2" />

    <TextView
        android:id="@+id/ci_payment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C.I. 154211454"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="@+id/progress_payment2"
        app:layout_constraintTop_toBottomOf="@+id/progress_payment2" />

    <TextView
        android:id="@+id/seccion_payment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Sección A"
        android:textColor="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="@+id/grade_payment2"
        app:layout_constraintStart_toEndOf="@+id/grade_payment2"
        app:layout_constraintTop_toTopOf="@+id/grade_payment2" />

    <TextView
        android:id="@+id/grade_payment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5to año"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="@+id/name_payument2"
        app:layout_constraintTop_toBottomOf="@+id/name_payument2" />

    <TextView
        android:id="@+id/code_payment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código: K1-12547885545"
        android:textColor="@color/purple_200"
        app:layout_constraintEnd_toEndOf="@+id/progress_payment2"
        app:layout_constraintTop_toBottomOf="@+id/progress_payment2" />

</androidx.constraintlayout.widget.ConstraintLayout>