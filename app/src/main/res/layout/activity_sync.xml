<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sync.Sync">

    <ProgressBar
        android:id="@+id/progressBar_sync"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="156dp"
        android:layout_height="166dp"
        android:scrollbarStyle="outsideInset"
        android:theme="@style/Theme.ProgressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/percent_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar_sync"
        app:layout_constraintEnd_toEndOf="@+id/progressBar_sync"
        app:layout_constraintStart_toStartOf="@+id/progressBar_sync"
        app:layout_constraintTop_toTopOf="@+id/progressBar_sync" />

    <TextView
        android:id="@+id/message_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sincronizando la base de datos de pendejadas"
        android:textColor="@color/purple_500"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/progressBar_sync"
        app:layout_constraintStart_toStartOf="@+id/progressBar_sync"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_sync" />

    <TextView
        android:id="@+id/cancelSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Toca para cancelar"
        android:textColor="@color/purple_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>