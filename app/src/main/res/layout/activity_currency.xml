<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Currency.Currency">

    <Space
        android:id="@+id/space4"
        android:layout_width="29dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNext_currency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Aceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/space4"
        app:layout_constraintTop_toBottomOf="@+id/space4" />

    <ScrollView
        android:id="@+id/scrollView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space4"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dolar_today_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Esperando..."
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/DolarTodayLogo"
                app:layout_constraintStart_toEndOf="@+id/DolarTodayLogo"
                app:layout_constraintTop_toTopOf="@+id/DolarTodayLogo" />

            <TextView
                android:id="@+id/sicad1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Esperando..."
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/Sicad1Logo"
                app:layout_constraintStart_toEndOf="@+id/Sicad1Logo"
                app:layout_constraintTop_toTopOf="@+id/Sicad1Logo" />

            <TextView
                android:id="@+id/sicad2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Esperando..."
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/Sicad2Logo"
                app:layout_constraintStart_toEndOf="@+id/Sicad2Logo"
                app:layout_constraintTop_toTopOf="@+id/Sicad2Logo" />

            <TextView
                android:id="@+id/cucuta_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Esperando..."
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/CucutaLogo"
                app:layout_constraintStart_toEndOf="@+id/CucutaLogo"
                app:layout_constraintTop_toTopOf="@+id/CucutaLogo" />

            <ImageView
                android:id="@+id/DolarTodayLogo"
                android:layout_width="89dp"
                android:layout_height="76dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/dolar_today_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/Sicad1Logo"
                android:layout_width="89dp"
                android:layout_height="76dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/sicad_logo"
                app:layout_constraintEnd_toEndOf="@+id/DolarTodayLogo"
                app:layout_constraintStart_toStartOf="@+id/DolarTodayLogo"
                app:layout_constraintTop_toBottomOf="@+id/DolarTodayLogo" />

            <ImageView
                android:id="@+id/Sicad2Logo"
                android:layout_width="89dp"
                android:layout_height="76dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/sicad_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Sicad1Logo" />

            <ImageView
                android:id="@+id/CucutaLogo"
                android:layout_width="89dp"
                android:layout_height="76dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/cucuta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Sicad2Logo" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DolarToday"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/DolarTodayLogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/DolarTodayLogo" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sicad 1"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/Sicad1Logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sicad 2"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/Sicad2Logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cucuta"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/CucutaLogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasa de cambio expresada en Bolivares por Dolar"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/scrollView11"
        app:layout_constraintStart_toStartOf="@+id/scrollView11" />

    <TextView
        android:id="@+id/textView80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InformaciÃ³n obtenida de la API de Dolartoday"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/textView72"
        app:layout_constraintStart_toStartOf="@+id/scrollView11" />

    <TextView
        android:id="@+id/textView84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Tasa seleccionada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/selectedRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:foregroundGravity="center_vertical|center|center_horizontal|fill"
        android:inputType="textPersonName"
        android:textColor="@color/bolivar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:theme="@style/Theme.VictoryPay.datePicker"
        app:layout_constraintBottom_toBottomOf="@+id/textView85"
        app:layout_constraintEnd_toEndOf="@+id/textView84"
        app:layout_constraintStart_toEndOf="@+id/textView85"
        app:layout_constraintTop_toTopOf="@+id/textView85" />

    <TextView
        android:id="@+id/textView85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Bs"
        android:textColor="@color/bolivar"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView84"
        app:layout_constraintTop_toBottomOf="@+id/textView84" />
</androidx.constraintlayout.widget.ConstraintLayout>